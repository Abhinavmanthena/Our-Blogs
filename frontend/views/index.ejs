<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <script>
      // Confirm before deleting a post
      function confirmDelete(event) {
        if (!confirm("Are you sure you want to delete this post?")) {
          event.preventDefault(); // Prevent the default action if the user cancels
        }
      }
    </script>
  </head>

  <body>
    <div class="container">
      <h1>Our Blogs</h1>
      <a id="newPostBtn" href="/new">New Post</a>

      <ul id="postsList">
        <% if (posts.length > 0) { %> <% posts.forEach(post => { %>
        <li>
          <h2><%= post.title %></h2>
          <small>Posted on: <%= new Date(post.date).toLocaleString() %></small>

          <p><%= post.content %></p>
          <small>By: <%= post.author %></small>
          <br />
          <a class="edit" href="/edit/<%= post.id %>">Edit</a>
          <a
            class="delete"
            href="/api/posts/delete/<%= post.id %>"
            onclick="confirmDelete(event)"
            >Delete</a
          >
        </li>
        <% }) %> <% } else { %>
        <li>No posts found</li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
